.index_tab .bottom_scroll{
  width:100%;
  white-space:nowrap;
  overflow:hidden;
  margin-top: 30rpx;
}
.index_tab .bottom_scroll .nav{
  width:20%;
  display:inline-block;
  white-space:normal;
  text-align:center;
  font-size: 26rpx;
}
.money{
   width: 70rpx;
  height:  70rpx;
}
.title{
  margin: 10rpx;
  font-size: 28rpx;
}
.hotLine{
   height: 30rpx;
   display: flex;
  width: 150rpx;
  justify-content: center;
  margin: 0 auto;
}
.classNav{
  margin-right: 20rpx;
}
.hot{
  position: relative;
  margin: 0.8rem;
  border-bottom: 1px solid rgb(241, 235, 235);
  display: flex;
  /* justify-content: space-between; */
