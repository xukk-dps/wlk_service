}
.hotImg{
  width:300rpx;
  height:250rpx;
}
.moneyWrap{
  display: flex;
  flex-direction: column;
  margin:0 0.2rem;
}
.current{
  color: coral;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-family: "PingFangSC-Regular" !important;
  font-weight: 450;
  font-size:14px;
}
.original{
  text-decoration: line-through;
 font-size: 20rpx;
  color: rgba(219, 219, 219, 0.933);
  margin-left: 0.2rem;
}
.profit{
  margin-right: 1rem;
}
.return{
  background-color: red;
  padding:0  0.1rem;
  color: white;
}
.profits{
  color: red;
  padding-left: 0.2rem;
}
.sell{
  position: absolute;
  z-index: 99;
  background-color:rgba(146, 137, 137, 0.933);
  opacity: 0.8;
  width: 4.2rem;
  height: 1.3rem;
  right: 0;
  color: #ffffff;
}



.buys{
  margin: 20rpx 0;
   border: 1px solid #929292;
